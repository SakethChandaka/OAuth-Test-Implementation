@page "/"

@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient Http

<h3>API Test</h3>

<div class="form-group">
    <label for="mainLink">Main Link</label>
    <input type="text" id="mainLink" @bind="mainLink" class="form-control" placeholder="Enter Main Link" />
</div>

<div class="form-group">
    <label for="subLink">Sub Link</label>
    <input type="text" id="subLink" @bind="subLink" class="form-control" placeholder="Enter Sub Link" />
</div>

<div class="form-group">
    <label for="requestBody">Body</label>
    <textarea id="requestBody" @bind="requestBody" class="form-control" placeholder="Enter request body"></textarea>
</div>

<button class="btn btn-primary" @onclick="SendRequest">Send Request</button>

@if (responseMessage != null)
{
    <div class="alert alert-info mt-3">
        <strong>Response:</strong> @responseMessage
    </div>
}

@code {
    private string mainLink = string.Empty;
    private string subLink = string.Empty;
    private string requestBody = string.Empty;
    private string responseMessage;

    private async Task SendRequest()
    {
        try
        {
            var url = $"https://localhost:7111/rgateway/image/back";
            var data = new { mainLink, subLink, requestBody };

            var response = await Http.PostAsJsonAsync(url, data);

            if (response.IsSuccessStatusCode)
            {
                responseMessage = "Request was successful!";
            }
            else
            {
                responseMessage = $"Error: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            responseMessage = $"Exception: {ex.Message}";
        }
    }
}
